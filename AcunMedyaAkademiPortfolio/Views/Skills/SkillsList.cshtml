@model List<AcunMedyaAkademiPortfolio.Models.TblSkills>
@{
    ViewBag.Title = "SkillsList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Değeri</th>
        <th>Geçen Hafta</th>
        <th>Geçen Ay</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Title</td>
            <td>@item.Value</td>
            <td>@item.LastWeekValue</td>
            <td>@item.LastMonthValue</td>
            <td><a href="/Skills/UpdateSkill/@item.SkillId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Skills/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
    </table>
<a href="/Skills/CreateSkill"class="btn btn-success">Yeni yetenek ekle</a>
