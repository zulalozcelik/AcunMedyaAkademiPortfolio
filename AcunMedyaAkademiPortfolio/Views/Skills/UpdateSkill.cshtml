@model AcunMedyaAkademiPortfolio.Models.TblSkills 
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateSkill</h2>

<form method="post">
    <label>Yetenek Id'si'</label>
    <input type="text" class="form-control" name="SkillId" value="@Model.SkillId"/>
    <label>Yetenek Adı</label>
    <input type="text" class="form-control" name="Title" value="@Model.Title"/>
    <label>Yetenek Değeri</label>
    <input type="text" class="form-control" name="Valule" value="@Model.Value" />
    <label>Geçen Haftalık Değeri</label>
    <input type="text" class="form-control" name="LastWeekValue" value="@Model.LastWeekValue"/>
    <label>Geçen Haftalık Değeri</label>
    <input type="text" class="form-control" name="LastMonthValue" value="@Model.LastMonthValue"/>
    <br />
    <button class="btn btn-info">Yeteneği Kaydet</button>
</form>
