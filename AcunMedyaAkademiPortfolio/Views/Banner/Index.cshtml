@Model List<using AcunMedyaAkademiPortfolio.Models.TblBanner>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/AdminLayout/Index.cshtml";
    }

    <h2>Banner</h2>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image </th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BannerId</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td align="center">
                    <img src="@item.ImageUrl" style="width:150px" />
                </td>
                <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-warning"> Update</a></td>
                <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-danger"> Delete</a></td>
            </tr>
        }

    </table>

    <td><a href="/Banner/CreateBanner/"class="btn btn-success">Add new Banner</a></td>
